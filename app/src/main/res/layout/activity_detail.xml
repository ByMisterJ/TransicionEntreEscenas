<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500"
            android:title="Palette"
            android:titleTextColor="@android:color/white" />

        <!-- Imagen principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/image1"
                android:transitionName="imageTransition"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Description Text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/description_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="descriptionTransition" />

        <!-- Chips Group -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:transitionName="chipsTransition"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVibrant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibrante"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suave"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oscuro"
                style="@style/Widget.Material3.Chip.Filter" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Colores generados por la paleta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:text="@string/color_palette"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/colorsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:transitionName="fabTransition"
        app:srcCompat="@android:drawable/ic_menu_share"
        android:contentDescription="Share" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
